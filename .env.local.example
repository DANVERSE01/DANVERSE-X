# DANVERSE-X Environment Variables
# Copy this file to .env.local and fill in your values

# ==========================================
# REQUIRED - Site Configuration
# ==========================================

# Your production domain (no trailing slash)
NEXT_PUBLIC_SITE_URL=https://danverse.ai

# ==========================================
# REQUIRED - Contact Information
# ==========================================

# WhatsApp number (country code + number, no spaces or +)
NEXT_PUBLIC_WHATSAPP_NUMBER=201207346648

# Business email for contact forms
NEXT_PUBLIC_CONTACT_EMAIL=danverseai@outlook.com

# Instagram handle (without @)
NEXT_PUBLIC_INSTAGRAM=danverse.creative

# ==========================================
# OPTIONAL - Analytics (Currently Disabled)
# ==========================================
# Uncomment and fill if you want to add tracking later

# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# ==========================================
# OPTIONAL - Feature Flags
# ==========================================

# Enable maintenance mode (true/false)
# NEXT_PUBLIC_MAINTENANCE_MODE=false

# Enable beta features (true/false)
# NEXT_PUBLIC_ENABLE_BETA=false

# ==========================================
# Development Only
# ==========================================
# These are only used in development mode

# Show debug information
# NEXT_PUBLIC_DEBUG=false

# API URL for local development
# NEXT_PUBLIC_API_URL=http://localhost:3000/api
